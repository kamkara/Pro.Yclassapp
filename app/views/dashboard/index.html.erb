<% @title="Dashboard" %>
<%#= turbo_frame_tag "dashboard" do %>

<!-- component -->
<div class="">
    <div x-data="{ sidebarOpen: false }" class="flex h-screen bg-gray-200">
        <div :class="sidebarOpen ? 'block' : 'hidden'" @click="sidebarOpen = false" class="fixed z-20 inset-0 bg-black opacity-50 transition-opacity lg:hidden"></div>
        <!-- Sidebar -->
        <%= render "dashboard/shared/sidebar" %>

        <div
            class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <%= render "dashboard/shared/header" %>
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200">
                <div class="container mx-auto px-6 py-8">
                    <h3 class="text-gray-700 text-2xl font-medium">Admin Lnclass</h3>
                    <div
                        class="mt-8">
                        <!-- Header -->
                        <%= render "dashboard/shared/statistics" %>
                    </div>

                    <div class="flex flex-col mt-8">
<h3 class="text-gray-700 text-2xl font-medium">
    Nouveaux Membres
    <%#= link_to 'Export List', export_student_path(format: :csv) , class:"font-semibold bg-red-300 rounded-lg p-2"%>
    <%#= link_to 'Export Course', course_export_path(format: :csv) , class:"font-semibold bg-red-300 rounded-lg p-2"%></h3>


                        <% if current_user_status == "team" %> 
                        
                            <% cache do %>
                                <%= render "dashboard/shared/student_list" %>            
                            <% end %>                        
                        <% end %>                        
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

<%## end %>
