<div id="<%= dom_id article %>">
<% @title= article.title %>

  
  <div class="my-5 font-bold text-2xl md:text-5xl">    
    <%= article.title %>
  </div>

  <div class="my-5 font-medium font-sans">
    <div class="my-4">
      <div class="my-2"> 
        <%= article.created_at.to_fs(:short) %>, par <%= article.user.full_name %>, <%= article.material_name %>
      </div>
      <% if article.main_image_article.attached? %>
      <%#= image_tag article.main_image_article.variant(:thumb) %>
      <%= image_tag article.main_image_article %>
  <% end %>
  

    </div> 
    <div class="p-2 border bg-white">
      <%= article.content %>
    </div>
  </div>

  <% if action_name != "show" %>
    <%= link_to "Voir article", article, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% if user_signed_in?  %>
        <%= link_to 'Modifier article', edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>

    <hr class="mt-6">
  <% end %>
</div>
