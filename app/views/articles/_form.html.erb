<%= form_with(model: article, class: "contents") do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.text_field :title, 
    placeholder:"Donner le titre de l'article ...", 
    class: "article-style" %>
  </div>
  <div class="my-5">
<%= form.file_field :main_image_article,
    accept: 'image/png, image/gif, image/jpeg',
    placeholder:"Donner le titre de l'article ...", 
    class: "" %>
  </div>

  <div class="my-5">
    <%= form.rich_text_area :content,
     placeholder:"Ecrivez le contenu de l'article ...", 
class: "article-style bg-white" %>

  </div>

  <div class="w-full my-2">
    <%= form.label :Matiere %><br>
    <%= form.select :material_name, @materials.map{|material| [material.title]}, class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>


  <div class="inline my-2">
    <%= form.submit "Publiez l'Article", class: "rounded-lg py-2 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
